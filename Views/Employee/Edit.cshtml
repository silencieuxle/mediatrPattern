@model Employee

<div class="container">
    <h2 class="text-center">Edit Employee</h2>
    <div class="row">
        <div class="col-6 offset-3">
            <form asp-action="Update" method="POST">
                <input type="hidden" asp-for="Id"/>

                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input type="text" asp-for="FullName" class="form-control"/>
                </div>

                <div class="form-group">
                    <label asp-for="Age"></label>
                    <input type="number" asp-for="Age" class="form-control"/>
                </div>

                <input type="submit" class="btn btn-outline-primary btn-block" value="Update"/>
                <a asp-action="Index" class="btn btn-outline-danger btn-block">Cancel</a>
            </form>
        </div>
    </div>
</div>